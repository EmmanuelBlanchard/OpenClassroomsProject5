{% extends 'base.html.twig' %}

{% block title %}Créer un nouveau compte
{% endblock %}

{% block stylesheets %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}
	<section class="contentBlockSection">

		<h2 class="h2CreateAccount">Créer un nouveau compte</h2>

		<p class="paragraphsOfCreateAccount">Créer votre compte en quelques clics sur ÉchangeLivres et échangez dès aujourd'hui vos premiers livres, simplement et rapidement.
		</p>
		<p class="paragraphsOfCreateAccount">Un service de qualité, des échanges à volonté !</p>

		{{ form_start(registrationForm, {'attr': {'id': 'registration_form'}}) }}

		<div class="form-control">
			<i class="bi bi-check-circle"></i>
			<i class="bi bi-exclamation-circle"></i>
			{{ form_label(registrationForm.pseudo) }}
			{{ form_widget(registrationForm.pseudo) }}

			<small>{{ form_help(registrationForm.pseudo) }}</small>

			<div class="form-error">
				{{ form_errors(registrationForm.pseudo) }}
			</div>
		</div>

		<div class="form-control">
			<i class="bi bi-check-circle"></i>
			<i class="bi bi-exclamation-circle"></i>
			{{ form_label(registrationForm.lastname) }}
			{{ form_widget(registrationForm.lastname) }}

			<small>{{ form_help(registrationForm.lastname) }}</small>

			<div class="form-error">
				{{ form_errors(registrationForm.lastname) }}
			</div>
		</div>

		<div class="form-control">
			<i class="bi bi-check-circle"></i>
			<i class="bi bi-exclamation-circle"></i>
			{{ form_label(registrationForm.firstname) }}
			{{ form_widget(registrationForm.firstname) }}

			<small>{{ form_help(registrationForm.firstname) }}</small>

			<div class="form-error">
				{{ form_errors(registrationForm.firstname) }}
			</div>
		</div>

		<div class="form-control">
			<i class="bi bi-check-circle"></i>
			<i class="bi bi-exclamation-circle"></i>
			{{ form_label(registrationForm.email) }}
			{{ form_widget(registrationForm.email) }}

			<small>{{ form_help(registrationForm.email) }}</small>

			<div class="form-error">
				{{ form_errors(registrationForm.email) }}
			</div>
		</div>

		<div class="form-control">
			<i class="bi bi-check-circle"></i>
			<i class="bi bi-exclamation-circle"></i>
			{{ form_label(registrationForm.plainPassword) }}
			{{ form_widget(registrationForm.plainPassword) }}

			<small>{{ form_help(registrationForm.plainPassword) }}</small>

			<div class="form-error">
				{{ form_errors(registrationForm.plainPassword) }}
			</div>
		</div>

		<div class="form-control">
			<i class="bi bi-check-circle"></i>
			<i class="bi bi-exclamation-circle"></i>
			{{ form_label(registrationForm.zipCode) }}
			{{ form_widget(registrationForm.zipCode) }}

			<small>{{ form_help(registrationForm.zipCode) }}</small>

			<div class="form-error">
				{{ form_errors(registrationForm.zipCode) }}
			</div>
		</div>

		<div class="form-control">
			<i class="bi bi-check-circle"></i>
			<i class="bi bi-exclamation-circle"></i>
			{{ form_label(registrationForm.city) }}
			{{ form_widget(registrationForm.city) }}

			<small>{{ form_help(registrationForm.city) }}</small>

			<div class="form-error">
				{{ form_errors(registrationForm.city) }}
			</div>
		</div>

		<div class="form-control">
			<i class="bi bi-check-circle"></i>
			<i class="bi bi-exclamation-circle"></i>
			{{ form_label(registrationForm.agreeTerms) }}
			{{ form_widget(registrationForm.agreeTerms) }}

			<small>{{ form_help(registrationForm.agreeTerms) }}</small>

			<div class="form-error">
				{{ form_errors(registrationForm.agreeTerms) }}
			</div>
		</div>

		{{ form_end(registrationForm) }}
	</section>
{% endblock %}

{% block javascripts %}
	<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

	<script src="{{ asset('js/validationregistrationform.js') }}"></script>
{% endblock %}
