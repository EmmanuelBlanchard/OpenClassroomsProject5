{% extends 'base.html.twig' %}

{% block title %}Créer un nouveau compte
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}
	<section class="contentBlockSection">

		<h2 class="h2CreateAccount">Créer un nouveau compte</h2>

		<p class="paragraphsOfCreateAccount">Créer votre compte en quelques clics sur ÉchangeLivres et échangez dès aujourd'hui vos premiers livres, simplement et rapidement.
		</p>
		<p class="paragraphsOfCreateAccount">Un service de qualité, des échanges à volonté !</p>

		{{ form_start(registrationForm) }}

		<div>
			<label for="registration_form_pseudo" class="required">Pseudo :
			</label>
			<input type="text" id="registration_form_pseudo" name="registration_form[pseudo]" required="required">
			<span id="missing_pseudo"></span><br>
		</div>

		<div>
			<label for="registration_form_lastname" class="required">Nom :
			</label>
			<input type="text" id="registration_form_lastname" name="registration_form[lastname]" required="required">
			<span id="missing_lastname"></span><br>
		</div>

		<div>
			<label for="registration_form_firstname" class="required">Prenom :
			</label>
			<input type="text" id="registration_form_firstname" name="registration_form[firstname]" required="required">
			<span id="missing_firstname"></span><br>
		</div>

		{{ form_row(registrationForm.email, {
                label: 'E-mail : '
            }) }}
		{{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe : '
            }) }}
		{{ form_row(registrationForm.zipCode, {
                label: 'Code postal : '
            }) }}
		{{ form_row(registrationForm.city, {
                label: 'Ville : '
            }) }}
		{{ form_row(registrationForm.agreeTerms, {
                label: 'Vous acceptez les conditions générales d\'utilisation
                et la politique de confidentialité du site ÉchangeLivres.'
            }) }}

            <div class="divButtonCreateAccount">
                <button type="submit" class="btn btn-success buttonCreateAccount" id="submitRegistrationFormButton">S'inscrire</button>
            </div>
        {{ form_end(registrationForm) }}
	</section>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/validationregistrationform.js') }}"></script>
{% endblock %}
