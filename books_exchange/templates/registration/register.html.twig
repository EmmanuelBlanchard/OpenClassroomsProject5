{% extends 'base.html.twig' %}

{% block title %}Créer un nouveau compte{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <aside class="asideSearchBar">
        <form action="" class="formSearchBar">
                <input class="searchInput" type="text">
                <button class="searchButton" type="submit">Rechercher</button>
        </form>
    </aside>
    <section class="contentBlockSection">

        <h2 class="h2CreateAccount">Créer un nouveau compte</h2>

        <p class="paragraphsOfCreateAccount">Créer votre compte en quelques clics sur ÉchangeLivres et échangez dès aujourd'hui vos premiers livres, simplement et rapidement. </p>
        <p class="paragraphsOfCreateAccount">Un service de qualité, des échanges à volonté !</p>

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email, {
                label: 'E-mail : '
            }) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe : '
            }) }}
            {{ form_row(registrationForm.agreeTerms, {
                label: 'Vous acceptez les conditions générales d\'utilisation
                et la politique de confidentialité du site ÉchangeLivres.'
            }) }}

            <div class="divButtonCreateAccount">
                <button type="submit" class="btn btn-success buttonCreateAccount">S'inscrire</button>
            </div>
        {{ form_end(registrationForm) }}

    </section>
{% endblock %}
