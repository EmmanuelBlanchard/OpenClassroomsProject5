{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<section class="contentBlockSection">
		<h2 class="h3 mb-3 font-weight-normal h2LoginToTheAccount">Connexion</h2>
		<form name="login_form" method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					Vous êtes connecté en tant que
					{{ app.user.username }},
					<a href="{{ path('app_logout') }}">Déconnexion</a>
				</div>
			{% endif %}

			<div class="form-group mb-3">
				<label for="inputEmail" class="form-label">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
			</div>

			<div class="form-group mb-3">
				<label for="inputPassword" class="form-label">Mot de passe</label>
				<input type="password" name="password" id="inputPassword" class="form-control" required>
			</div>

			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{#
			    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
			    See https://symfony.com/doc/current/security/remember_me.html
			
			    <div class="checkbox mb-3">
			        <label>
			            <input type="checkbox" name="_remember_me"> Remember me
			        </label>
			    </div>
			#}

			<div class="divButtonLoginToTheAccount">
				<button class="btn btn-lg btn-success buttonLoginToTheAccount" type="submit">
					Se connecter
				</button>
			</div>
		</form>

		<p class="paragraphForgottenPasswordLink">
			<a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié</a>
		</p>

	</section>
{% endblock %}
