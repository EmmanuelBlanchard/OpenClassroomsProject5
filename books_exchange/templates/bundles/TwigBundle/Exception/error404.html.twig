{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Page non trouvée{% endblock %}

{% block body %}
    <div class="container">
        <h1>Page non trouvée</h1>
        <p>
            La page demandée n'a pas pu être localisée. Vérifiez l'absence de toute URL
            mal orthographiée ou <a href="{{ path('app_home') }}">revenir à la page d'accueil</a>.
        </p>
    </div>
{% endblock %}