{% extends 'baseBootstrap.html.twig' %}

{% block title %}
	Modification de l'e-mail de
	{{ app.user.pseudo }}
{% endblock %}

{% block stylesheets %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
{% endblock %}

{% block body %}
	<div id="formContainer">
		{% for message in app.flashes('error') %}
			<div class="col-sm-12">
				<div class="alert alert-danger" role="alert">
					{{message}}
				</div>
			</div>
		{% endfor %}
		<div class="formHeader">
			<h2>Modification de l'e-mail de
				{{ app.user.pseudo }}
			</h2>
		</div>
		{{ form_start(editemailForm, {'attr': {'id': 'editemail_form', 'class': 'form'}}) }}

		<div class="form-control">
			<i class="bi bi-check-circle"></i>
			<i class="bi bi-exclamation-circle"></i>
			{{ form_label(editemailForm.email.first) }}
			{{ form_widget(editemailForm.email.first) }}

			<small>{{ form_help(editemailForm.email.first) }}</small>

			<div class="form-error">
				{{ form_errors(editemailForm.email.first) }}
			</div>
		</div>

		<div class="form-control">
			<i class="bi bi-check-circle"></i>
			<i class="bi bi-exclamation-circle"></i>
			{{ form_label(editemailForm.email.second) }}
			{{ form_widget(editemailForm.email.second) }}

			<small>{{ form_help(editemailForm.email.second) }}</small>

			<div class="form-error">
				{{ form_errors(editemailForm.email.second) }}
			</div>
		</div>

		{{ form_end(editemailForm) }}
	</div>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/editemailform.js') }}"></script>
{% endblock %}
