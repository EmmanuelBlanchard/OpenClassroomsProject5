{% extends 'baseBootstrap.html.twig' %}

{% block title %}
	Modification du profil de
	{{ app.user.pseudo }}
{% endblock %}

{% block stylesheets %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
{% endblock %}

{% block body %}
	<div id="formContainer">
		<div class="formHeader">
			<h2>Modification du profil de
				{{ app.user.pseudo }}
			</h2>
		</div>

		{{ form_start(editprofileForm, {'attr': {'id': 'edit_profile_form', 'class': 'form'}}) }}

		<div class="form-control">
			<i class="bi bi-check-circle"></i>
			<i class="bi bi-exclamation-circle"></i>
			{{ form_label(editprofileForm.pseudo) }}
			{{ form_widget(editprofileForm.pseudo) }}

			<small>{{ form_help(editprofileForm.pseudo) }}</small>

			<div class="form-error">
				{{ form_errors(editprofileForm.pseudo) }}
			</div>
		</div>

		<div class="form-control">
			<i class="bi bi-check-circle"></i>
			<i class="bi bi-exclamation-circle"></i>
			{{ form_label(editprofileForm.lastname) }}
			{{ form_widget(editprofileForm.lastname) }}

			<small>{{ form_help(editprofileForm.lastname) }}</small>

			<div class="form-error">
				{{ form_errors(editprofileForm.lastname) }}
			</div>
		</div>

		<div class="form-control">
			<i class="bi bi-check-circle"></i>
			<i class="bi bi-exclamation-circle"></i>
			{{ form_label(editprofileForm.firstname) }}
			{{ form_widget(editprofileForm.firstname) }}

			<small>{{ form_help(editprofileForm.firstname) }}</small>

			<div class="form-error">
				{{ form_errors(editprofileForm.firstname) }}
			</div>
		</div>

		<div class="form-control">
			<i class="bi bi-check-circle"></i>
			<i class="bi bi-exclamation-circle"></i>
			{{ form_label(editprofileForm.zipCode) }}
			{{ form_widget(editprofileForm.zipCode) }}

			<small>{{ form_help(editprofileForm.zipCode) }}</small>

			<div class="form-error">
				{{ form_errors(editprofileForm.zipCode) }}
			</div>
		</div>

		<div class="form-control">
			<i class="bi bi-check-circle"></i>
			<i class="bi bi-exclamation-circle"></i>
			{{ form_label(editprofileForm.city) }}
			{{ form_widget(editprofileForm.city) }}

			<small>{{ form_help(editprofileForm.city) }}</small>

			<div class="form-error">
				{{ form_errors(editprofileForm.city) }}
			</div>
		</div>

		{{ form_end(editprofileForm) }}
	</div>
</div>{% endblock %}{% block javascripts %}
<script src="{{ asset('js/editprofileform.js') }}"></script>{% endblock %}
