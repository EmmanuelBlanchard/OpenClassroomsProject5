{% extends 'base.html.twig' %}

{% block title %}
	Modification du profil de
	{{ app.user.pseudo }}
{% endblock %}

{% block body %}
	<aside class="asideSearchBar">
		<form action="" class="formSearchBar">
			<input class="searchInput" type="text">
			<button class="searchButton" type="submit">Rechercher</button>
		</form>

		{% if app.user %}
			<div class="informationAboutTheAccountTheLibraryTheExchanges">
				<p class="paragraphOfWelcomeOfPseudo">Salut
					{{ app.user.pseudo }}</p>
				<div class="divAboutTheAccountTheLibraryTheExchanges">
					<h3>Votre compte</h3>
					<a href="{{ path('user') }}" class="linkManagemyAccount">Gérer mon compte</a>
					<a href="" class="linkMail">Messagerie</a>
					<h3>Bibliothèque</h3>
					<a href="{{ path('user_book') }}" class="linkStockOfBooks">Stock de livres</a>
					<h3>Échanges</h3>
					<a href="../9-ConnectedBookExchangeClickOnTheBookExchangeLink/connectedbookexchangeclickonthebookexchangelink.html" class="linkBookExchange">Échanges de livres</a>
				</div>
			</div>
		{% endif %}
	</aside>

	<div class="container">
		<div class="row col-sm-12">
			<div class="col-sm-12">
				<h1>Modification du profil de
					{{ app.user.pseudo }}
				</h1>
				{{ form_start(editprofileForm) }}
				{{ form_row(editprofileForm.pseudo, {
					label: 'Pseudo : '
				}) }}
				{{ form_row(editprofileForm.lastname, {
					label: 'Nom : '
				}) }}
				{{ form_row(editprofileForm.firstname, {
					label: 'Prénom : '
				}) }}
				{{ form_row(editprofileForm.email, {
					label: 'E-mail : '
				}) }}
				{{ form_row(editprofileForm.zipCode, {
					label: 'Code postal : '
				}) }}
				{{ form_row(editprofileForm.city, {
					label:'Ville : '
				}) }}
				{{ form_row(editprofileForm.validate, {
					label:'Valider'
				}) }}
				{{ form_end(editprofileForm) }}
			</div>
		</div>
	</div>
{% endblock %}
