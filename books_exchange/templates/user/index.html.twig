{% extends 'base.html.twig' %}

{% block title %}
	Profil de
	{{ app.user.pseudo }}
{% endblock %}

{% block body %}
	{% for message in app.flashes('success') %}
		<div class="alert alert-success" role="alert">{{ message }}</div>
	{% endfor %}

	<aside class="asideSearchBar">
		<form action="" class="formSearchBar">
			<input class="searchInput" type="text">
			<button class="searchButton" type="submit">Rechercher</button>
		</form>

		{% if app.user %}
			<div class="informationAboutTheAccountTheLibraryTheExchanges">
				<p class="paragraphOfWelcomeOfPseudo">Salut
					{{ app.user.pseudo }}</p>
				<div class="divAboutTheAccountTheLibraryTheExchanges">
					<h3>Votre compte</h3>
					<a href="{{ path('user') }}" class="linkManagemyAccount">Gérer mon compte</a>
					<a href="" class="linkMail">Messagerie</a>
					<h3>Bibliothèque</h3>
					<a href="{{ path('user_book') }}" class="linkStockOfBooks">Stock de livres</a>
					<h3>Échanges</h3>
					<a href="../9-ConnectedBookExchangeClickOnTheBookExchangeLink/connectedbookexchangeclickonthebookexchangelink.html" class="linkBookExchange">Échanges de livres</a>
				</div>
			</div>
		{% endif %}

	</aside>

	<div class="container">
		{% for message in app.flashes('message') %}
			<div class="col-sm-12">
				<div class="alert alert-success" role="alert">
					{{message}}
				</div>
			</div>
		{% endfor %}
		<div class="row col-sm-12">
			<div class="col-sm-12">
				<h1>Profil de
					{{ app.user.firstname }}
					{{ app.user.lastname }}
				</h1>
			</div>
			<div class="col-sm-3">Pseudo :</div>
			<div class="col-sm-9">{{ app.user.pseudo }}</div>
			<div class="col-sm-3">Nom :</div>
			<div class="col-sm-9">{{ app.user.lastname }}</div>
			<div class="col-sm-3">Prénom :</div>
			<div class="col-sm-9">{{ app.user.firstname }}</div>
			<div class="col-sm-3">E-mail :</div>
			<div class="col-sm-9">{{ app.user.email }}</div>
			<div class="col-sm-3">Code postal :</div>
			<div class="col-sm-9">{{ app.user.zipCode }}</div>
			<div class="col-sm-3">Ville :</div>
			<div class="col-sm-9">{{ app.user.city }}</div>
			<div class="col-sm-12">
				<a class="btn btn-primary" href="{{ path('user_profile_edit') }}" role="button">Modifier le profil</a>
				<a class="btn btn-primary" href="{{ path('user_password_edit') }}" role="button">Modifier le mot de passe</a>
			</div>

			<div class="col-sm-12">
				<h1>Livres de
					{{ app.user.firstname }}
					{{ app.user.lastname }}
					({{ app.user.books|length }})
				</h1>
			</div>
			{% for books in app.user.books %}
				<div class="col-sm-3">Titre :</div>
				<div class="col-sm-9">{{ books.title }}</div>
				<div class="col-sm-3">Auteur :</div>
				<div class="col-sm-9">{{ books.author }}</div>
				<div class="col-sm-3">Catégorie :</div>
				<div class="col-sm-9">{{ books.category }}</div>
				<div class="col-sm-3">Éditeur :</div>
				<div class="col-sm-9">{{ books.publisher }}</div>
				<div class="col-sm-3">Résumé :</div>
				<div class="col-sm-9">{{ books.summary }}</div>
				<div class="col-sm-3">Langue :</div>
				<div class="col-sm-9">{{ books.language }}</div>
				<div class="col-sm-3">Format :</div>
				<div class="col-sm-9">{{ books.format }}</div>
				<div class="col-sm-3">État du livre :</div>
				<div class="col-sm-9">{{ books.state }}</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
