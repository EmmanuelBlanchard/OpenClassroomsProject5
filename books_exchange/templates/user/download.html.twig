{% extends "base_pdf.html.twig" %}

{% block title %}Liste des données personnelles de
	{{ app.user.firstname }}
	{{ app.user.lastname }}
{% endblock %}
{% block body %}
	<h1>Liste des données personnelles de
		{{ app.user.firstname }}
		{{ app.user.lastname }}
	</h1>
	<h2>Vos données</h2>
	<table border="1">
		<thead>
			<tr>
				<th scope="col">Pseudo</th>
				<th scope="col">Nom</th>
				<th scope="col">Prénom</th>
				<th scope="col">E-mail</th>
				<th scope="col">Code Postal</th>
				<th scope="col">Ville</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>{{ app.user.pseudo }}</td>
				<td>{{ app.user.lastname }}</td>
				<td>{{ app.user.firstname }}</td>
				<td>{{ app.user.email }}</td>
				<td>{{ app.user.zipCode }}</td>
				<td>{{ app.user.city }}</td>
			</tr>
		</tbody>
	</table>
	<h2>Vos Livres (Nombre de livres mis :
		{{ app.user.books|length }})</h2>

	<table border="1">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Titre</th>
				<th scope="col">Auteur</th>
				<th scope="col">Catégorie</th>
				<th scope="col">Éditeur</th>
				<th scope="col">Résumé</th>
				<th scope="col">Langue</th>
				<th scope="col">Format</th>
				<th scope="col">État</th>
			</tr>
		</thead>
		<tbody>
			{% for book in app.user.books %}
				<tr>
					<th scope="row">{{ book.id }}</th>
					<td>{{ book.title }}</td>
					<td>{{ book.author }}</td>
					<td>{{ book.category }}</td>
					<td>{{ book.publisher }}</td>
					<td>{{ book.summary|striptags }}</td>
					<td>{{ book.language }}</td>
					<td>{{ book.format }}</td>
					<td>{{ book.state }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
