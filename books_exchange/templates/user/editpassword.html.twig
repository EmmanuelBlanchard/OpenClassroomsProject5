{% extends 'base.html.twig' %}

{% block title %}
	Modification du mot de passe de
	{{ app.user.pseudo }}
{% endblock %}

{% block body %}
	<aside class="asideSearchBar">
		<form action="" class="formSearchBar">
			<input class="searchInput" type="text">
			<button class="searchButton" type="submit">Rechercher</button>
		</form>

		{% if app.user %}
			<div class="informationAboutTheAccountTheLibraryTheExchanges">
				<p class="paragraphOfWelcomeOfPseudo">Salut
					{{ app.user.pseudo }}</p>
				<div class="divAboutTheAccountTheLibraryTheExchanges">
					<h3>Votre compte</h3>
					<a href="{{ path('user') }}" class="linkManagemyAccount">Gérer mon compte</a>
					<a href="" class="linkMail">Messagerie</a>
					<h3>Bibliothèque</h3>
					<a href="{{ path('user_book') }}" class="linkStockOfBooks">Stock de livres</a>
					<h3>Échanges</h3>
					<a href="../9-ConnectedBookExchangeClickOnTheBookExchangeLink/connectedbookexchangeclickonthebookexchangelink.html" class="linkBookExchange">Échanges de livres</a>
				</div>
			</div>
		{% endif %}
	</aside>

	<div class="container">
		{% for message in app.flashes('error') %}
			<div class="col-sm-12">
				<div class="alert alert-danger" role="alert">
					{{message}}
				</div>
			</div>
		{% endfor %}
		<div class="row col-sm-12">
			<div class="col-sm-12">
				<h1>Modification du mot de passe de
					{{ app.user.pseudo }}
				</h1>
				<form method="post">
					<div class="mb-3">
						<label for="password" class="form-label">Mot de passe</label>
						<input type="password" class="form-control" id="password" name="password">
					</div>
					<div class="mb-3">
						<label for="password2" class="form-label">Confirmer le mot de passe</label>
						<input type="password" class="form-control" id="password2" name="password2">
					</div>
					<button type="submit" class="btn btn-primary">Valider</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
