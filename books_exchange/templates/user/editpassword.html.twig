{% extends 'base.html.twig' %}

{% block title %}
	Modification du mot de passe de
	{{ app.user.pseudo }}
{% endblock %}

{% block stylesheets %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
{% endblock %}

{% block body %}
	<div class="container">
		{% for message in app.flashes('error') %}
			<div class="col-sm-12">
				<div class="alert alert-danger" role="alert">
					{{message}}
				</div>
			</div>
		{% endfor %}
		<div class="row col-sm-12">
			<div class="col-sm-12">
				<h1>Modification du mot de passe de
					{{ app.user.pseudo }}
				</h1>

				{{ form_start(editpasswordForm, {'attr': {'id': 'editpassword_form'}}) }}

				<div class="form-control">
					<i class="bi bi-check-circle"></i>
					<i class="bi bi-exclamation-circle"></i>
					{{ form_label(editpasswordForm.plainPassword) }}
					{{ form_widget(editpasswordForm.plainPassword) }}

					<small>{{ form_help(editpasswordForm.plainPassword) }}</small>

					<div class="form-error">
						{{ form_errors(editpasswordForm.plainPassword) }}
					</div>
				</div>

				{{ form_end(editpasswordForm) }}
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/editpasswordform.js') }}"></script>
{% endblock %}
