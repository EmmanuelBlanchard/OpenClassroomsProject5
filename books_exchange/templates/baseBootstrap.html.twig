<!doctype html>
<html lang="en">
	<head>
		<!-- Required meta tags -->
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<title>
			{% block title %}Bonjour!
			{% endblock %}
		</title>

		<!-- Custom CSS -->
		<link
		rel="stylesheet" href="{{ asset('css/style3.css') }}">

		<!-- Bootstrap CSS -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous"> {% block stylesheets %}{% endblock %}

		</head>
		<body>

			<nav class="navbar navbar-expand-sm navbar-dark bg-dark" aria-label="Third navbar example">
				<div class="container-fluid">
					<a class="navbar-brand" href="#">Expand at sm</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample03" aria-controls="navbarsExample03" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>

					<div class="collapse navbar-collapse" id="navbarsExample03">
						<ul class="navbar-nav me-auto mb-2 mb-sm-0">
							<li class="nav-item">
								<a class="nav-link active" aria-current="page" href="#">Home</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="#">Link</a>
							</li>
							<li class="nav-item">
								<a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
							</li>
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" id="dropdown03" data-bs-toggle="dropdown" aria-expanded="false">Dropdown</a>
								<ul class="dropdown-menu" aria-labelledby="dropdown03">
									<li>
										<a class="dropdown-item" href="#">Action</a>
									</li>
									<li>
										<a class="dropdown-item" href="#">Another action</a>
									</li>
									<li>
										<a class="dropdown-item" href="#">Something else here</a>
									</li>
								</ul>
							</li>
						</ul>
						<form>
							<input class="form-control" type="text" placeholder="Search" aria-label="Search">
						</form>
					</div>
				</div>
			</nav>

			<!-- container container-fluid mx-3 -->
			<header class="container">
				<nav>
					<div class="divNavLogo">
						<a href="{{ path('app_home') }}" class="aDivNavLogo navbar-brand">
							<img src="{{ asset('img/booksExchangeLogo.svg') }}" class="imgLogo" alt="mains avec livre effectuant un échange">
							<h1 class="brandnameExchange">Échange
								<span class="brandNameBook">Livres</span>
							</h1>
						</a>
					</div>
					<ul>
						{% if app.user %}
							<li>
								<a href="{{ path('app_logout') }}" class="linkCreateAccount">Se déconnecter</a>
							</li>
						{% else %}
							<li>
								<a href="{{ path('app_register') }}" class="linkCreateAccount">Créer mon compte</a>
							</li>
							<li>
								<a href="{{ path('app_login') }}" class="linkConnectMe">Connexion</a>
							</li>
						{% endif %}
					</ul>
				</nav>
				<div class="menu">
					<ul>
						<li class="liHowItWorks">
							<a href="{{ path('app_how_it_works') }}">Comment ça marche</a>
						</li>
						<li>
							<a href="">Foire aux questions</a>
						</li>
					</ul>
				</div>
			</header>
			<main>
				<aside class="asideSearchBar">
					<form action="" class="formSearcheBar">
						<input class="searchInput" type="text">
						<button class="searchButton btn-lg" type="submit">Rechercher</button>
					</form>

					{% if app.user %}
						<div class="infirmationAboutTheAccountTheLibraryTheExchanges">
							<p class="paragraphOfwelcomeofPseudo">Salut
								{{ app.user.pseudo }}</p>
							<div class="divAboutTheAccountTheLibraryTheExchanges">
								<h3>Votre Compte</h3>
								<a href="{{ path('user') }}" class="linkManageMyAccount">Gérer mon compte</a>
								<a href="" class="linkMail">Messagerie</a>
								<h3>Bibliothèque</h3>
								<a href="{{ path('user_book') }}" class="linkStockOfBooks">Stock de livres</a>
								<h3>Échanges</h3>
								<a href="{{ path('user_book_show_exchange') }}" class="linkBookExchange">Échange de livres</a>
							</div>
						</div>
					{% endif %}
				</aside>
				{% block body %}{% endblock %}
			</main>
			{% block javascripts %}{% endblock %}
			<!-- Optional JavaScript; choose one of the two! -->
			<!-- Option 2: Separate Popper and Bootstrap JS -->
			<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>
		</body>
	</html>
