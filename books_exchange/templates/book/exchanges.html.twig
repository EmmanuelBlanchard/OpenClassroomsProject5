{% extends 'baseBootstrap.html.twig' %}

{% block title %}
	Échange de livres de
	{{ app.user.pseudo }}
{% endblock %}


{% block body %}
	<div class="container">
		{% for message in app.flashes('message') %}
			<div class="divAlert col-sm-12">
				<div class="alert alert-success" role="alert">
					{{message}}
				</div>
			</div>
		{% endfor %}
		{% for message in app.flashes('error') %}
			<div class="divAlert col-sm-12">
				<div class="alert alert-danger" role="alert">
					{{ message }}
				</div>
			</div>
		{% endfor %}
		<h2 class="h2ConnectedBookExchangeClickOnTheBookExchangeLink">Échange de livres</h2>

		<div class="col-sm-12">
			<h3 class="h3TheBooksIRequestedToExchange">Mes demandes d'échange de livres
				{% if theBooksIRequestedToExchange|length == "0" %}
					(0 livre)
				{% else %}
					({{ theBooksIRequestedToExchange|length }}
					livres)
				{% endif %}
			</h3>
		</div>

		{% if theBooksIRequestedToExchange|length == "0" %}
			<div class="divTheBooksIRequestedToExchange">
				<p>Vous n'avez effectué aucune demande d'échange de livres actuellement</p>
			</div>

			<div class="divExchangeInstructions">
				<p>I - Pour échanger un livre, utilisez la barre de recherche</p>
				<p>II - Chercher le titre du livre ou l'auteur du livre.</p>
				<p>III - Cliquez sur le bouton Échanger du livre voulu.</p>
				<p>IV - Le propriétaire du livre, reçoit par courriel, votre demande</p>
				<p>d'échange de livre et regarde dans votre stock de livres</p>
				<p>quel livre voudrait t'il de votre stock de livres.</p>
				<p>V - Il doit y avoir au minimun cinq livres disponibles</p>
				<p>dans votre stock.</p>
				<p>VI - Si non réponse dans votre messagerie d'ici 4 jours,</p>
				<p>l'échange est annulé.</p>
			</div>

		{% else %}
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th scope="col">Titre</th>
						<th scope="col">Auteur</th>
						<th scope="col">État du livre</th>
						<th scope="col">Propriétaire du livre</th>
						<th scope="col">Localisation du livre</th>
						<th scope="col">Date de la demande d'échange</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for book in theBooksIRequestedToExchange %}
						<tr>
							<th scope="row">{{book.title}}</th>
							<td>{{book.author}}</td>
							<td>{{book.state}}</td>
							<td>{{book.user.pseudo}}</td>
							<td>{{book.user.city}}
								{{ book.user.zipCode }}</td>
							<td>{{book.exchangeRequestAt|date('d/m/Y')}}</td>
							<td class="text-center">
								<a class="btn btn-primary" href="{{ path("book_cancel_exchange", {id: book.id}) }}" role="button">Annuler</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		{% endif %}

		<div class="col-sm-12">
			<h3 class="h3MyBooksRequestedForExchange">Les demandes d'échange de mes livres
				{% if myBooksRequestedForExchange|length == "0" %}
					(0 livre)
				{% else %}
					({{ myBooksRequestedForExchange|length }}
					livres)
				{% endif %}
			</h3>
		</div>

		{% if myBooksRequestedForExchange|length == "0" %}
			<div class="divMyBooksRequestedForExchange">
				<p>Vous n'avez aucune demande d'échange de vos livres actuellement</p>
			</div>

		{% else %}
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th scope="col">Titre</th>
						<th scope="col">Auteur</th>
						<th scope="col">État du livre</th>
						<th scope="col">Demandeur du livre</th>
						<th scope="col">Localisation du demandeur</th>
						<th scope="col">Date de la demande d'échange</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for book in myBooksRequestedForExchange %}
						<tr>
							<th scope="row">{{book.title}}</th>
							<td>{{book.author}}</td>
							<td>{{book.state}}</td>
							<td>{{book.userexchange.pseudo}}</td>
							<td>{{book.userexchange.city}}
								{{book.userexchange.zipCode}}</td>
							<td>{{book.exchangeRequestAt|date('d/m/Y')}}</td>
							<td class="text-center">
								<a class="btn btn-primary m-2 modal-trigger" href="#" data-bs-toggle="modal" data-bs-target="#modal-contact" data-id="{{book.id}}" data-requester="{{book.user.pseudo}}" data-title="{{book.title}}" data-author="{{book.author}}" data-publisher="{{book.publisher}}" data-format="{{book.format}}" data-state="{{book.state}}" aria-haspopup="dialog" aria-controls="dialog" role="button">
									Contacter
								</a>
								<a class="btn btn-primary" href="{{ path("book_cancel_exchange", {id: book.id}) }}" role="button">Annuler</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		{% endif %}
	</div>

	<!-- Modal -->
	<div class="modal fade" id="modal-contact" tabindex="-1" aria-labelledby="dialog-title" aria-hidden="true">
		<div role="document" class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="dialog-title">Contacter le demandeur du livre</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer" title="Fermer cette fenêtre modale"></button>
				</div>
				{{ form_start(contactBookForm) }}
				<div class="modal-body">
					{{ form_widget(contactBookForm.title) }}
					{{ form_row(contactBookForm.email) }}
					{{ form_row(contactBookForm.message) }}
				</div>
				<div class="modal-footer">
					<button class="btn btn-primary" aria-label="Envoyer" title="Envoyer le message au demandeur du livre" aria-controls="dialog">Envoyer</button>
					<button type="button" class="btn btn-secondary modal-trigger" data-bs-target="#modal-contact" data-bs-dismiss="modal" aria-label="Fermer" title="Fermer cette fenêtre modale">Fermer</button>
				</div>
				{{ form_end(contactBookForm) }}
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/modalcontact.js')}}"></script>
{% endblock %}
