{% extends 'base.html.twig' %}

{% block title %}
	{{ app.user.firstname }}
	{{ app.user.lastname }}
	- Confirmation de la demande d'échange du livre
{% endblock %}

{% block body %}
	<section class="container confirm-exchange">
		{% for message in app.flashes('message') %}
			<div class="divAlert col-12">
				<div class="alert alert-success" role="alert">
					{{message}}
				</div>
			</div>
		{% endfor %}
		{% for message in app.flashes('error') %}
			<div class="divAlert col-12">
				<div class="alert alert-danger" role="alert">
					{{ message }}
				</div>
			</div>
		{% endfor %}
		<h2 class="h2ConfirmExchange">Échange de livres</h2>
		<div class="divConfirmExchange">
			<p>La demande d'échange du livre
				<span>{{ book.title }}</span>
			</p>
			<p>est
				<span>confirmée !</span>
			</p>
			<p>Si non réponse de
				<span>{{book.user.pseudo}}</span>
				d'ici quatre jours dans votre messagerie, l'échange est annulé.
			</p>
		</div>
	</section>
{% endblock %}
