<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{#<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">#}
		<link rel="stylesheet" href="{{ asset('css/style.css') }}"> {% block stylesheets %}{% endblock %}
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
		<link rel="icon" type="image/x-icon" href="{{ asset('icons/favicon.ico') }}"/>
	</head>
	<body>
		<header>
			<nav>
				<div class="divNavLogo">
					<a href="{{ path('app_home') }}" class="aDivNavLogo">
						<img src="{{ asset('img/booksExchangeLogo.svg') }}" class="imgLogo" alt="mains avec livre effectuant un échange">
						<h1 class="brandNameExchange">Échange
							<span class="brandNameBook">Livres</span>
						</h1>
					</a>
				</div>
				<ul>
					{% if app.user %}
						<li>
							<a href="{{ path('app_logout') }}" class="linkCreateAccount">Se deconnecter</a>
						</li>
					{% else %}
						<li>
							<a href="{{ path('app_register') }}" class="linkCreateAccount">Créer mon compte</a>
						</li>
						<li>
							<a href="{{ path('app_login') }}" class="linkConnectMe">Me connecter</a>
						</li>
					{% endif %}
				</ul>
			</nav>
			<div class="menu">
				<ul>
					<li class="liHowItWorks">
						<a href="{{ path('app_how_it_works') }}">Comment ça marche</a>
					</li>
					<li>
						<a href="">Foire aux questions</a>
					</li>
				</ul>
			</div>
		</header>
		<main>
			<aside class="asideSearchBar">
				<form action="" class="formSearchBar">
					<input class="searchInput" type="text">
					<button class="searchButton" type="submit">Rechercher</button>
				</form>

				{% if app.user %}
					<div class="informationAboutTheAccountTheLibraryTheExchanges">
						<p class="paragraphOfWelcomeOfPseudo">Salut
							{{ app.user.pseudo }}</p>
						<div class="divAboutTheAccountTheLibraryTheExchanges">
							<h3>Votre compte</h3>
							<a href="{{ path('user') }}" class="linkManageMyAccount">Gérer mon compte</a>
							<h3>Bibliothèque</h3>
							<a href="{{ path('user_book') }}" class="linkStockOfBooks">Stock de livres</a>
							<h3>Échanges</h3>
							<a href="{{ path('user_book_show_exchange') }}" class="linkBookExchange">Échange de livres</a>
						</div>
					</div>
				{% endif %}
			</aside>
			{% block body %}{% endblock %}
		</main>
		{% block javascripts %}{% endblock %}
	</body>
</html>
