{% extends 'baseBootstrap.html.twig' %}

{% block title %}Gérer les catégories
{% endblock %}

{% block body %}
	<h1>Gérer les catégories</h1>

	<a class="btn btn-primary" href="{{ path("admin_category_add") }}" role="button">Ajouter une catégorie</a>

	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th scope="col">ID</th>
				<th scope="col">Nom</th>
				<th scope="col">Parent</th>
				<th scope="col">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for item in category %}
				<tr>
					<th scope="row">{{item.id}}</th>
					<td>{{item.name}}</td>
					<td>{{item.parent}}</td>
					<td class="text-center">
						<a class="btn btn-primary" href="{{ path("admin_category_update", {id: item.id}) }}" role="button">Modifier</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
