{% extends 'admin/index.html.twig' %}

{% block title %}Gérer les auteurs
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Gérer les auteurs</h1>
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Nom</th>
					<th scope="col">Parent</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for item in author %}
					<tr>
						<th scope="row">{{item.id}}</th>
						<td>{{item.name}}</td>
						<td>{{item.parent}}</td>
						<td class="text-center">
							<a class="btn btn-primary m-2" href="{{ path("admin_author_add") }}" role="button">Ajouter</a>
							<a class="btn btn-primary m-2" href="{{ path("admin_author_update", {id: item.id}) }}" role="button">Modifier</a>
							<a class="btn btn-primary m-2 modal-trigger" href="#" data-bs-toggle="modal" data-bs-target="#modal-delete" data-id="{{item.id}}" role="button">
								Supprimer
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<!-- Modal -->
		<div class="modal fade" id="modal-delete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel">Supprimer l'auteur</h5>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<div class="modal-body"></div>
					<div class="modal-footer">
						<a href="" class="btn btn-danger">Valider</a>
						<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
						<button type="button" class="btn btn-primary">Enregistrer les changements</button>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/modalauthor.js')}}"></script>
{% endblock %}
