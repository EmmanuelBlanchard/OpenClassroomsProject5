<!doctype html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="Page d'accueil du site d'Échange Livres">
		<title>
			{% block title %}Bonjour Administrateur du site d'Échange Livres !
			{% endblock %}
		</title>
		<!-- Bootstrap core CSS -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
		{% block stylesheets %}{% endblock %}
		<!-- Favicons -->
		<link rel="icon" type="image/x-icon" href="{{ asset('icons/favicon.ico') }}"/>
		<!-- Custom styles for this template -->
		<link rel="stylesheet" href="{{ asset('css/stylebackoffice.css') }}">
	</head>
	<body>
		<header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
			<a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="{{ path('app_home') }}">Échange Livres</a>
			<button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<input class="form-control form-control-dark w-100" type="text" placeholder="Rechercher" aria-label="Rechercher">
			<ul class="navbar-nav px-3">
				<li class="nav-item text-nowrap">
					<a class="nav-link" href="{{ path('app_logout') }}">Se déconnecter</a>
				</li>
			</ul>
		</header>
		<div class="container-fluid">
			<div class="row">
				<nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
					<div class="position-sticky pt-3">
						<ul class="nav flex-column">
							<li class="nav-item">
								<a class="nav-link active" aria-current="page" href="#">
									Tableau de bord
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('admin_user_home') }}">
									Utilisateur
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('admin_book_home') }}">
									Livre
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('admin_author_home') }}">
									Auteur
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('admin_category_home') }}">
									Catégorie
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('admin_publisher_home') }}">
									Éditeur
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('admin_language_home') }}">
									Langue
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('admin_format_home') }}">
									Format
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('admin_state_home') }}">
									État
								</a>
							</li>
						</ul>
					</div>
				</nav>
				<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
					<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
						<h2 class="h2">Tableau de bord</h2>
					</div>
					{% block body %}{% endblock %}
				</main>
			</div>
		</div>
		{% block javascripts %}{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
	</body>
</html>
