			<small>{{ form_help(addBookForm.title) }}</small>

			<div class="form-error">
				{{ form_errors(addBookForm.title) }}
			</div>
		</div>

		<div class="form-control">
			<i class="bi bi-check-circle"></i>
			<i class="bi bi-exclamation-circle"></i>
