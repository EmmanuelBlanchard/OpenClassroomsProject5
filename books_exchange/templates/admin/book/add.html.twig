			<div class="form-error">
				{{ form_errors(addBookForm.author) }}
			</div>
		</div>

		<div class="form-control">
			<i class="bi bi-check-circle"></i>
			<i class="bi bi-exclamation-circle"></i>
			{{ form_label(addBookForm.category) }}
