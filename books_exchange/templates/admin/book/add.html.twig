{% extends 'admin/index.html.twig' %}

{% block title %}Ajouter un livre
{% endblock %}

{% block body %}
	<div id="formContainer">
		<div class="formHeader">
			<h2>Ajouter un livre</h2>
		</div>

		{{ form_start(addBookForm, {'attr': {'id': 'add_book_form', 'class': 'form'}}) }}

