{{ form_start(form) }}
{{ form_widget(form) }}

{# Check if the route is "admin_book_update" we display the images #}
{% if app.request.attributes.get('_route') == 'admin_book_update' %}
	<h2>Images</h2>
	{% for image in book.images %}
		<div>
			<img src="{{ asset('/uploads/' ~ image.name) }}" alt="Image" width="260" height="300">
			<a href="{{ path('admin_book_delete_image', {id: image.id}) }}" data-delete data-token="{{ csrf_token('delete' ~ image.id) }}">Supprimer</a>
		</div>
	{% endfor %}
{% endif %}
<button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
